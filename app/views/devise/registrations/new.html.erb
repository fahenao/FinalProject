<div class="container" id="container1">
        <div class="row centered-form">
            <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Sign Up</h3>
                    </div>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages! %>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">
                                <%= f.label :name %><br />
                                <%= f.text_field :name, class: "form-control input-sm" %>
                            </div>

                            <div class="form-group">
                                <%= f.label :last_name %><br />
                                <%= f.text_field :last_name, class: "form-control input-sm" %>
                            </div>

                            <div class="form-group">
                              <%= f.label :email %><br />
                              <%= f.email_field :email, class: "form-control input-sm"%>
                            </div>

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                      <%= f.label :password %>
                                      <% if @minimum_password_length %> <br>
                                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                                      <% end %><br />
                                      <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm" %>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                      <%= f.label :password_confirmation %><br />
                                      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-sm" %>
                                    </div>
                                </div>
                            </div>
                            <%= f.submit "Sign up", class: 'btn btn-info btn-block' %>
                        </form>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>

<style>
#container1 {
    background-color: #e2dada;
}

.centered-form {
 

}

.centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>